<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_margin"
        android:paddingBottom="@dimen/medium_margin"
        android:orientation="vertical">

        <TextView
            android:text="James Adeniran Ogunsanya"
            android:id="@+id/lbl_name"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/small_margin"
            android:id="@+id/lbl_company"
            android:textColor="@color/white"
            android:text="James &amp; Co."
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_margin"
        android:background="@color/white">

        <TextView
            android:drawableLeft="@drawable/ic_phone_black_18dp"
            android:drawableStart="@drawable/ic_phone_black_18dp"
            android:drawablePadding="@dimen/large_margin"
            style="@style/artisanCardDetail"
            android:id="@+id/lbl_phone"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/ic_mail_outline_black_18dp"
            android:drawableStart="@drawable/ic_mail_outline_black_18dp"
            android:drawablePadding="@dimen/large_margin"
            style="@style/artisanCardDetail"
            android:id="@+id/lbl_email"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/ic_business_black_18dp"
            android:drawableStart="@drawable/ic_business_black_18dp"
            android:drawablePadding="@dimen/large_margin"
            style="@style/artisanCardDetail"
            android:id="@+id/lbl_address"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/ic_stars_black_18dp"
            android:drawableStart="@drawable/ic_stars_black_18dp"
            android:drawablePadding="@dimen/large_margin"
            style="@style/artisanCardDetail"
            android:id="@+id/lbl_specialty"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_close"
            android:text="@string/close"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view"
            android:text="@string/view"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_edit"
            android:text="@string/edit"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>